<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalorieCounter_activity">

    <TextView
        android:id="@+id/CalorieCounter_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calorie output"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.172" />

    <Button
        android:id="@+id/button_positive_5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="+5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_positive_100"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.465" />

    <Button
        android:id="@+id/button_positive_100"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        android:text="+100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CalorieCounter_output"
        app:layout_constraintVertical_bias="0.256" />

    <Button
        android:id="@+id/button_positive_1000"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="+1000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toEndOf="@+id/button_positive_100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.467" />

    <Button
        android:id="@+id/button_negative_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_positive_100"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_positive_5"
        app:layout_constraintVertical_bias="0.208" />

    <Button
        android:id="@+id/button_negative_100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_positive_1000"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toEndOf="@+id/button_negative_5"
        app:layout_constraintTop_toBottomOf="@+id/button_positive_100"
        app:layout_constraintVertical_bias="0.208" />

    <Button
        android:id="@+id/button_negative_1000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-1000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintStart_toEndOf="@+id/button_negative_100"
        app:layout_constraintTop_toBottomOf="@+id/button_positive_1000"
        app:layout_constraintVertical_bias="0.206" />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_negative_100"
        app:layout_constraintVertical_bias="0.217" />

    <Button
        android:id="@+id/button_add_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to total calorie count"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_reset"
        app:layout_constraintVertical_bias="0.281" />
</androidx.constraintlayout.widget.ConstraintLayout>